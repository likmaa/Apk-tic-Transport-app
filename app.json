{
  "expo": {
    "name": "TIC Miton",
    "slug": "tic-miton",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "ticmiton",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Nous avons besoin de votre position pour vous localiser sur la carte.",
        "NSLocationAlwaysUsageDescription": "L'application a besoin de votre position en arrière-plan pour assurer le suivi de votre trajet, même quand l'écran est éteint.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "L'application a besoin de votre position en arrière-plan pour assurer le suivi de votre trajet.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ]
      },
      "bundleIdentifier": "com.ticmiton.passenger"
    },
    "android": {
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/app-icon.png"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.ticmiton.passenger"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/LOGO_OR.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-location",
      "expo-font",
      "expo-web-browser",
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox",
          "RNMapboxDownloadToken": "sk.eyJ1Ijoibm91dmVhdTU4IiwiYSI6ImNtajF3Z3BkeDBiNXAzZnNhc3djMDY0djIifQ.872kPcF77lZX4d3AZb9SDA"
        }
      ],
      "expo-notifications"
    ],
    "extra": {
      "mapboxToken": "${EXPO_PUBLIC_MAPBOX_TOKEN}",
      "router": {},
      "eas": {
        "projectId": "1816c494-082a-4d56-ac58-44df74661bd1"
      }
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "owner": "ticmiton"
  }
}